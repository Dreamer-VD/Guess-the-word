<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashScreenColor"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="175dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/potch12" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="180dp"
        android:layout_height="175dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/potch1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="175dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/potch14" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="175dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:srcCompat="@drawable/potch13" />

    <Button
        android:id="@+id/buttonNext"
        style="@style/ThemeTextButtonGame"
        android:layout_width="140dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:onClick="ClickNext"
        android:text="Далее"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="209dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonClick1"
            style="@style/ThemeTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickOt1"
            android:text="Праздник" />

        <Button
            android:id="@+id/buttonClick2"
            style="@style/ThemeTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickOt2"
            android:text="Ёлка" />

        <Button
            android:id="@+id/buttonClick3"
            style="@style/ThemeTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickOt3"
            android:text="Шитьё" />

        <Button
            android:id="@+id/buttonClick4"
            style="@style/ThemeTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickOt4"
            android:text="Нет верного ответа" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>